                        text: `Payroll ${type.toUpperCase()} rejected`
                    });

                    loadPayrollData();
                }
            } catch (error) {
                console.error('Error rejecting payroll:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.response?.data?.error || 'Failed to reject payroll'
                });
            } finally {
                showLoading(false);
            }
        }

        // Mark payroll as paid
        async function markAsPaid(payrollId) {
            try {
                const { value: formValues } = await Swal.fire({
                    title: 'Mark as Paid',
                    html: `
                        <div class="mb-3">
                            <label class="form-label">Payment Reference</label>
                            <input type="text" id="paymentRef" class="swal2-input" placeholder="Enter payment reference">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            <select id="paymentMethod" class="swal2-select">
                                <option value="bank_transfer">Bank Transfer</option>
                                <option value="mobile_money">Mobile Money</option>
                                <option value="cash">Cash</option>
                                <option value="cheque">Cheque</option>
                            </select>
                        </div>
                    `,
                    focusConfirm: false,
                    showCancelButton: true,
                    confirmButtonText: 'Mark as Paid',
                    confirmButtonColor: '#10b981',
                    preConfirm: () => {
                        const reference = document.getElementById('paymentRef').value;
                        const method = document.getElementById('paymentMethod').value;
                        
                        if (!reference.trim()) {
                            Swal.showValidationMessage('Payment reference is required');
                            return false;
                        }
                        
                        return { reference, method };
                    }
                });

                if (formValues) {
                    showLoading(true);
                    
                    await axios.patch(`/payroll/${payrollId}/mark-paid`, formValues);

                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: 'Payroll marked as paid successfully'
                    });

                    loadPayrollData();
                }
            } catch (error) {
                console.error('Error marking as paid:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.response?.data?.error || 'Failed to mark as paid'
                });
            } finally {
                showLoading(false);
            }
        }

        // Show/hide loading spinner
        function showLoading(show, targetId = null) {
            if (targetId) {
                const target = document.getElementById(targetId);
                if (show) {
                    target.innerHTML = `
                        <div class="text-center py-5">
                            <div class="loading-spinner mb-3"></div>
                            <div>Loading...</div>
                        </div>
                    `;
                }
            } else {
                // Show global loading
                if (show) {
                    Swal.fire({
                        title: 'Processing...',
                        html: '<div class="loading-spinner"></div>',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showConfirmButton: false
                    });
                } else {
                    Swal.close();
                }
            }
        }

        // Utility function to format currency
        function formatCurrency(amount, currency = 'MWK') {
            return `${currency} ${(amount || 0).toLocaleString()}`;
        }

        // Utility function to format date
        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            return new Date(dateString).toLocaleDateString();
        }

        // Export functions for debugging
        window.payrollFunctions = {
            loadPayrollData,
            viewPayrollDetails,
            downloadPayslip,
            processPayroll,
            generateConsolidatedPayslips,
            generateBankInstruction,
            generateSpecificReport,
            createFromPrevious,
            approvePayroll,
            rejectPayroll,
            markAsPaid
        };
    </script>
