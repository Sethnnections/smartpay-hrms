
<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Employee Management</h2>
            <p class="text-muted">Manage your organization's workforce</p>
        </div>
