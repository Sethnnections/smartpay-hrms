                        const submitBtn = $('#submit-employee');
                        const submitText = $('#submit-employee-text');
                        const spinner = $('#submit-employee-spinner');

                        // Show loading state
                        submitBtn.prop('disabled', true);
                        submitText.addClass('d-none');
                        spinner.removeClass('d-none');

