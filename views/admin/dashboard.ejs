<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TPS - Dashboard</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Sidebar -->
    <%- include('./partials/sidebar', { currentPage: 'dashboard' }) %>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <!-- Header -->
        <%- include('./partials/header', { 
            title: 'Dashboard Overview', 
            user: typeof user !== 'undefined' ? user : { name: 'User', email: '', avatar: 'U' } 
        }) %>

        <!-- Page Content -->
        <main class="dashboard-content">
            <div class="container-fluid px-4">
                <!-- Period Filter -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card filter-card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-4">
                                        <h5 class="card-title mb-0">Dashboard Period</h5>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="d-flex justify-content-end">
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-outline-primary period-btn" data-period="1" data-type="month">1 Month</button>
                                                <button type="button" class="btn btn-outline-primary period-btn" data-period="3" data-type="month">3 Months</button>
                                                <button type="button" class="btn btn-outline-primary period-btn active" data-period="12" data-type="month">12 Months</button>
                                                <button type="button" class="btn btn-outline-primary period-btn" data-period="1" data-type="year">1 Year</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Summary Cards -->
                <div class="row mb-4" id="summaryCards">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="text-muted mb-1">Total Employees</h6>
                                                <h3 class="mb-0" id="totalEmployees">--</h3>
                                                <small class="text-success" id="employeeChange"><i class="fas fa-caret-up me-1"></i> --%</small>
                                            </div>
                                            <div class="avatar-sm">
                                                <span class="avatar-title bg-primary-lighten rounded-circle">
                                                    <i class="fas fa-users text-primary font-size-20"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="text-muted mb-1">Departments</h6>
                                                <h3 class="mb-0" id="totalDepartments">--</h3>
                                                <small class="text-muted">Budget: <span id="totalBudget">--</span></small>
                                            </div>
                                            <div class="avatar-sm">
                                                <span class="avatar-title bg-info-lighten rounded-circle">
                                                    <i class="fas fa-building text-info font-size-20"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="text-muted mb-1">Payroll</h6>
                                                <h3 class="mb-0" id="totalPayroll">--</h3>
                                                <small class="text-muted">Avg. Salary: <span id="avgSalary">--</span></small>
                                            </div>
                                            <div class="avatar-sm">
                                                <span class="avatar-title bg-success-lighten rounded-circle">
                                                    <i class="fas fa-money-bill-wave text-success font-size-20"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="text-muted mb-1">Turnover Rate</h6>
                                                <h3 class="mb-0" id="turnoverRate">--</h3>
                                                <small class="text-danger" id="terminations"><i class="fas fa-caret-down me-1"></i> -- terminations</small>
                                            </div>
                                            <div class="avatar-sm">
                                                <span class="avatar-title bg-warning-lighten rounded-circle">
                                                    <i class="fas fa-exchange-alt text-warning font-size-20"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Row 1 -->
                <div class="row mb-4">
                    <!-- Employee Distribution -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="card-title mb-0">Employee Distribution</h5>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="empDistDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                            Department
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="empDistDropdown">
                                            <li><a class="dropdown-item emp-dist-filter active" href="#" data-type="department">Department</a></li>
                                            <li><a class="dropdown-item emp-dist-filter" href="#" data-type="gender">Gender</a></li>
                                            <li><a class="dropdown-item emp-dist-filter" href="#" data-type="age">Age</a></li>
                                            <li><a class="dropdown-item emp-dist-filter" href="#" data-type="tenure">Tenure</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="chart-container" style="position: relative; height: 300px;">
                                    <canvas id="employeeDistributionChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payroll Trends -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="card-title mb-0">Payroll Trends</h5>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="payrollTrendDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                            Gross Pay
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="payrollTrendDropdown">
                                            <li><a class="dropdown-item payroll-trend-filter active" href="#" data-type="gross">Gross Pay</a></li>
                                            <li><a class="dropdown-item payroll-trend-filter" href="#" data-type="net">Net Pay</a></li>
                                            <li><a class="dropdown-item payroll-trend-filter" href="#" data-type="tax">Tax</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="chart-container" style="position: relative; height: 300px;">
                                    <canvas id="payrollTrendChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Row 2 -->
                <div class="row mb-4">
                    <!-- Department Budget -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title mb-3">Department Budget Utilization</h5>
                                <div class="chart-container" style="position: relative; height: 300px;">
                                    <canvas id="departmentBudgetChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Employee Status -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title mb-3">Employee Status</h5>
                                <div class="chart-container" style="position: relative; height: 300px;">
                                    <canvas id="employeeStatusChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Loading Spinner -->
    <div class="loading-spinner" id="loadingSpinner">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- Axios -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.2/axios.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Lodash (for utilities) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.21/lodash.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/admin.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>